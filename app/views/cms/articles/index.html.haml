= link_to 'New Article', new_cms_article_path

%h1 List of articles
%table
  %tr
    %th{align: "left"} Title
    %th{align: "left"} Content
    %th
  - @articles.each do |article|
    -if article.user == current_user
      %tr
        %td= article.title
        %td= article.lede
        %td= link_to 'Show', article_path(article)
        %td= link_to 'Edit', edit_cms_article_path(article)
        %td= link_to 'Delete', cms_article_path(article),  |
            method: :delete,                               |
            data: { confirm: 'Are you super-duper sure?' } |

