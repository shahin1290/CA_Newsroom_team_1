-if user_signed_in?
  -if current_user.role == 'journalist'
    %p=link_to "My account", cms_articles_path 

%h2 Articles
- @articles.each do |article|
  %h3= link_to "#{article.title}", article
  %p= image_tag("article.jpg")  
  %p= article.lede
  %p= article.author
  %p= article.created_at.strftime("%F")